<div class="form-group">
  <label for="title" class="form-label">Titulo</label>
  <input
    required
    type="text"
    class="form-control"
    id="title"
    name="title"
    value="<%= article.title%> "
  />
</div>

<div class="form-group">
  <label for="description" class="form-label">Descripci√≥n</label>
  <textarea
    type="text"
    class="form-control"
    id="description"
    name="description"
    style="height: 100px"
  >
  <%= article.description%>
  </textarea>
</div>

<div class="form-group">
  <label for="markdown" class="form-label">Resumen</label>
  <textarea
    required
    type="text"
    class="form-control"
    id="markdown"
    name="markdown"
    style="height: 100px"
  >
    <%= article.markdown%>
    </textarea
  >
</div>

<div>
  <label for="image" class="form-label">Seleccione una imagen</label>
  <input
    class="form-control"
    type="file"
    id="image"
    name="image"
    accept="image/*"
  />
</div>

<button type="submit" class="btn btn-primary">Guardar</button>
